@* _Layout.cshtml — Shared layout template used by all views for consistent look and feel *@
<!DOCTYPE html> @* Declare the document type as HTML5 *@
<html lang="en"> @* Set the page language to English for accessibility *@
<head>
    <meta charset="utf-8" /> @* Set character encoding to UTF-8 for broad character support *@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> @* Enable responsive design for mobile devices *@
    <title>@ViewData["Title"] - Cougs Clothes</title> @* Dynamic page title — each view sets ViewData["Title"] *@
    @* Custom SVG favicon — displays a blue Cougars-themed icon on the browser tab *@
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' fill='none'%3E%3Crect width='32' height='32' rx='6' fill='%23002277'/%3E%3Cpath d='M16 6L10 12h12L16 6z' fill='%234F9CF9'/%3E%3Cpath d='M10 12v14h12V12' stroke='%2387CEEB' stroke-width='2' fill='none'/%3E%3Ccircle cx='16' cy='22' r='2' fill='%23B0E0E6'/%3E%3C/svg%3E" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> @* Bootstrap CSS framework for responsive layout and components *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> @* Custom site styles with cache-busting version *@
    <link rel="stylesheet" href="~/Mission5HobbyTracker.styles.css" asp-append-version="true" /> @* Scoped CSS styles generated by the build *@
</head>
<body> @* Begin the visible page body *@
    <header> @* Top header section containing the navigation bar *@
        @* Bootstrap navbar — expands on small+ screens, uses custom cougs-nav gradient background *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 cougs-nav">
            <div class="container-fluid"> @* Full-width container for navbar content *@
                @* Brand logo and text — links back to the homepage *@
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    @* Display the favicon SVG image as the brand icon *@
                    <img src="~/favicon.svg" alt="Cougs Clothes logo" class="me-2" height="32" width="32" asp-append-version="true" />
                    Cougs Clothes @* Site brand name displayed in the navbar *@
                </a>
                @* Hamburger toggle button for collapsing the navbar on small screens *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> @* Bootstrap hamburger icon *@
                </button>
                @* Collapsible navbar content — contains the navigation links *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"> @* Navigation link list *@
                        <li class="nav-item"> @* Navigation item for the Home page *@
                            @* Link to the Index action on the Home controller *@
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item"> @* Navigation item for the Calculator page *@
                            @* Link to the Calculator action on the Home controller *@
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Calculator">Tutoring Calculator</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container"> @* Centered content container with Bootstrap max-width *@
        <main role="main" class="pb-3"> @* Main content area with bottom padding *@
            @RenderBody() @* Placeholder — each view's content is injected here *@
        </main>
    </div>

    @* Footer — displayed on every page for consistent look and feel *@
    <footer class="border-top footer text-muted">
        <div class="container"> @* Centered footer container *@
            &copy; 2026 - Cougs Clothes - Built by Ethan for IS 413 Mission 5 @* Copyright notice with name *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> @* Load jQuery library for DOM manipulation and AJAX *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> @* Load Bootstrap JS bundle (includes Popper) for interactive components *@
    <script src="~/js/site.js" asp-append-version="true"></script> @* Load custom site-wide JavaScript with cache-busting *@
    @await RenderSectionAsync("Scripts", required: false) @* Render optional per-view script sections (e.g., calculator.js) *@
</body>
</html>
