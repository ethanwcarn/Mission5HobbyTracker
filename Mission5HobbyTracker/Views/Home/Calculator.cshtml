@* Calculator.cshtml — Second view containing the tutoring cost calculator *@
@{
    ViewData["Title"] = "Tutoring Calculator"; // Set the browser tab title for this page
}

@* Calculator section container *@
<div class="calculator-section">
    <h1 class="mb-4">Cougs Clothes Tutoring Calculator</h1> @* Page heading for the calculator *@
    @* Description explaining what the calculator does *@
    <p class="text-muted mb-4">Find out how much it would cost to receive personalized tutoring about BYU vintage apparel collecting and styling.</p>

    @* Calculator card — styled container holding the form inputs *@
    <div class="card shadow-sm p-4 cougs-calc-card">
        <form id="tutoringCalculatorForm"> @* Form element wrapping all calculator inputs *@
            @* Hours input group *@
            <div class="mb-4">
                <label for="hours" class="form-label fw-semibold">Number of Hours Needed</label> @* Label for the hours input *@
                @* Number input — accepts positive values with 0.5 increments, requires a value *@
                <input type="number" id="hours" name="hours" class="form-control" 
                       placeholder="Enter hours (e.g., 5)" min="0" step="0.5" required />
                @* Error message container — hidden by default, shown by jQuery when validation fails *@
                <div id="hoursError" class="text-danger mt-1 small" style="display: none;"></div>
            </div>

            @* Hourly rate display group — read-only to show the fixed rate *@
            <div class="mb-4">
                <label for="rate" class="form-label fw-semibold">Hourly Rate (per hour)</label> @* Label for the rate display *@
                @* Read-only input showing the fixed $25.00 hourly rate *@
                <input type="text" id="rate" class="form-control form-control-plaintext bg-light" 
                       value="$25.00" readonly />
            </div>

            @* Calculate button group *@
            <div class="mb-4">
                @* Button that triggers the jQuery click handler to calculate the total *@
                <button type="button" id="calculateBtn" class="btn btn-cougs">Calculate Total</button>
            </div>

            @* Total cost output group *@
            <div class="mb-0">
                <label for="total" class="form-label fw-semibold">Total Cost</label> @* Label for the total output *@
                @* Read-only input where the calculated total is displayed by jQuery *@
                <input type="text" id="total" class="form-control form-control-plaintext bg-light fw-bold" 
                       value="" readonly placeholder="$0.00" />
            </div>
        </form>
    </div>

    @* Back navigation link — returns user to the homepage *@
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-cougs">&larr; Back to Home</a> @* Link back to Index view *@
    </div>
</div>

@* Scripts section — loads the calculator JavaScript file for this view only *@
@section Scripts {
    <script src="~/js/calculator.js" asp-append-version="true"></script> @* Load jQuery calculator logic with cache-busting *@
}
